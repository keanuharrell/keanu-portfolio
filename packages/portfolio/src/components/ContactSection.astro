<style>
  /* Contact section - more personal */
  .contact-section {
    background: linear-gradient(
      180deg,
      rgba(10, 10, 10, 1) 0%,
      rgba(255, 107, 53, 0.08) 50%,
      rgba(10, 10, 10, 1) 100%
    );
  }

  .contact-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .contact-title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    margin-bottom: 2rem;
    color: #ffffff;
    position: relative;
    z-index: 10;
  }

  .contact-story {
    font-size: 1.3rem;
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-bottom: 3rem;
  }

  .contact-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1.2rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 1.1rem;
  }

  .contact-link:hover {
    background: rgba(255, 107, 53, 0.1);
    border-color: #ff6b35;
    transform: translateY(-3px);
  }

  .availability {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    background: rgba(255, 107, 53, 0.1);
    border-radius: 50px;
    font-size: 1rem;
    border: 1px solid rgba(255, 107, 53, 0.3);
  }

  .availability-dot {
    width: 10px;
    height: 10px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.1); }
  }

  @media (max-width: 768px) {
    .contact-links { 
      flex-direction: column;
      align-items: center;
    }
  }
</style>